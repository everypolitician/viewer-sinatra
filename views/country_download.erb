<div class="page-section page-section--grey text-center">
  <div class="container">
    <h3>Download data for politicians in <%= @country[:name] %>.</h3>
  </div>
</div>

<div class="page-section">
  <div class="container">

    <% @country[:legislatures].each do |house| %>
      <div class="country__legislature" id="legislature-<%= house[:slug] %>">
        <div class="country__legislature__header">
          <h3><%= house[:name] %></h3>
        </div>

        <ul>
            Full legislature
            <br>
            <!-- note: house[:popolo_url] now available? -->
            <a href="https://cdn.rawgit.com/everypolitician/everypolitician-data/<%= house[:sha] %>/<%= house[:popolo] %>">JSON</a>
            |
            <a href="https://cdn.rawgit.com/everypolitician/everypolitician-data/<%= house[:sha] %>/<%= house[:names] %>">names</a>
        </ul>

        <ul id="terms-<%= house[:slug].downcase %>">
          <% house[:legislative_periods].each do |t| %>
            <li>
              <%= t[:name] %>
              <% unless t[:start_date].to_s.empty? and t[:end_date].to_s.empty? %>
                <%= t[:start_date] %> - <%= t[:end_date] %>
              <% end %>
              <br>
              <a href="<%= term_table_url(@country, house, t) %>">page</a>
              |
              <a href="<%= t[:csv_url] %>">CSV</a>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>


  </div>
</div>

