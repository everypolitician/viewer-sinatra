<body>
    <div id="wrapper">

        <header class="site-header">
            <div class="container">
                <div class="site-header__logo">
                    <h2>
                      <% if @country %>
                        <a href="/<%= @country[:url] %>/"><%= @country[:name] %></a>
                      <% else %>
                        <a href="/"><span class="header-logo">EveryPolitician</span></a>
                      <% end %>
                    </h2>
                </div>
                <div class="site-header__navigation site-header__navigation--primary">
                    <nav role="navigation">
                      <% if @country %>
                        <a href="/"><span class="header-logo">EveryPolitician</span></a>
                      <% end %>
                    </nav>
                </div>
                <div class="site-header__navigation site-header__navigation--secondary">
